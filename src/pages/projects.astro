---
import Layout from '../layouts/Layout.astro';


---

<Layout title="nmant.dev">
	<main>
        
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.avatar {
		display: flex;
		justify-content: center;
		align-items: center;
		width: max-content;
		margin: 0 auto 2rem;
		/* padding-bottom: 6.25rem; */
	}

	.avatar img {
		border: 1px solid rgba(var(--accent-light), 255);
		border-radius: 8px;
		width: 100%;
		height: auto;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		margin: auto;
		border-radius: 8px;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
</style>
