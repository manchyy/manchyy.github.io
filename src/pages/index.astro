---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const avatar = 'https://avatars.akamai.steamstatic.com/b8492722bac102cf91354090ddf82f0b8945f6c1_full.jpg'
---

<Layout title="nmant.dev">
	<main>
		<h1><span class="text-gradient">nmant.dev</span></h1>
		
		<div class="avatar">
			<img src={avatar} alt="manchyy" width="300" height="300">
		</div>
	
		<p class="instructions">
			<strong>Work-in-Progress</strong> personal site ;)
		</p>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.avatar {
		display: flex;
		justify-content: center;
		align-items: center;
		width: max-content;
		margin: 0 auto 2rem
	}

	.avatar img {
		border: 1px solid rgba(var(--accent-light), 255);
		border-radius: 8px;
		width: 100%;
		height: auto;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		margin: auto;
		border-radius: 8px;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
</style>
